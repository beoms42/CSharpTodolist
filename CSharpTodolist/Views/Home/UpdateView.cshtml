@model CSharpTodolist.Models.TodoList

@using (Html.BeginForm("UpdateAction", "home", FormMethod.Post))
{
    <div>
        <label for="Title">제목:</label>
        <input type="text" id="Title" name="Title" value="@Model.Title" />
    </div>
    
    <div>
        <label for="Content">내용:</label>
        <textarea id="Content" name="Content">@Model.Content</textarea>
    </div>
    
    <div>
        <label for="CreateDate">작성일:</label>
        <input type="text" id="CreateDate" name="CreateDate" value="@Model.CreateDate" />
    </div>
    
    <div>
        <label for="UpdateDate">수정일:</label>
        <input type="text" id="UpdateDate" name="UpdateDate" value="@Model.UpdateDate" />
    </div>

        <input type="hidden" id="id" name="Id" value="@Model.Id" />
    
    <input type="submit" value="저장" />
}